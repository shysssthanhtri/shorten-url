{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "../src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
        "^@/(.+)$": "<rootDir>/../src/$1",
        "^@test/(.+)$": "<rootDir>/../src/$1"
    }
}